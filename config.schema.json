{
  "pluginAlias": "WeenectHomebridgePlugin",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "username": {
        "title": "Username",
        "type": "string",
        "required": true
      },
      "password": {
        "title": "Password",
        "type": "string",
        "required": true
      },
      "lowBatteryThreshold": {
        "title": "Low battery threshold",
        "type": "number",
        "required": true,
        "default": 30
      },
      "updateInterval": {
        "title": "Update interval (in minutes)",
        "type": "number",
        "required": true,
        "default": 2
      }
    }
  }
}